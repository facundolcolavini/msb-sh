---
import ResetPasswordForm from "@/components/preact/ResetPassword/ResetPasswordForm";
import Layout from "@/layouts/Layout.astro";
const title = "Olvide mi contraseña";
const description =
  "Ingrese su correo electrónico y le enviaremos un enlace para restablecer su contraseña.";
---

<Layout title={title} description={description}>
  <section class="bg-secondary-bg-msb font-gotham md:px-22 py-12 md:py-22 lg:py-24 h-full flex items-center">
    <div class="container mx-auto  px-6">
      <div class="pt-10 pb-5 border w-fit text-center mx-auto p-6">
        <ResetPasswordForm  client:load/>
      </div>
    </div>
  </section>
</Layout>
