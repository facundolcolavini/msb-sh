---
import Link from "@/components/ui/Link.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import logo from "@/assets/logo.png";
import cucCia from "@/assets/cia.webp";
import cucCpi from "@/assets/cpi.webp";
import cucPrin from "@/assets/prin.webp";
import cucMoron from "@/assets/moron.webp";
---

<footer>
  <div
    class="bg-secondary-msb text-black shadow-inner flex justify-between items-center"
  >
    <div
      class="mx-auto py-20 container lg:px-6 grid grid-col lg:grid-col-2 gap-5 lg:gap-0 md:gap-5"
    >
      <div class="flex flex-col lg:col-starts-1 lg:col-ends-2">
        <h2
          class="text-3xl font-bold mb-4 flex justify-center md:justify-center lg:justify-start"
        >
          <Link
            href="/"
            checkActive={false}
            class="flex flex-shrink items-center justify-center"
          >
            <Image
              width={300}
              height={82}
              class="object-contain px-1 aspect-auto flex flex-shrink items-center justify-center mx-auto"
              src={logo}
              alt="Logo"
            />
          </Link>
        </h2>
        <div
          class="flex justify-center col-start-2 col-end-12 md:justify-center lg:justify-start align-middle mb-4"
        >
          <a
            href="https://www.facebook.com/matiasszpirabienesraices/"
            target="_blank"
            class="mr-2"><Icon size={24} name="social-facebook" /></a
          >
          <a
            href="https://www.instagram.com/matiasszpira/"
            target="_blank"
            class="mr-2"><Icon size={24} name="social-instagram" /></a
          >
          <a
            href="https://www.youtube.com/channel/UCZVVcBSiVjsJGdzUw_tAfEw"
            target="_blank"
            class="mr-2"><Icon size={24} name="social-youtube" /></a
          >
          <a
            href=`https://api.whatsapp.com/send/?phone=5491144161700&text=Hola%2C+me+contactaba+desde+https://msb-sh.vercel.app+para+consultarles&type=phone_number&app_absent=0`
            target="_blank"
            class="mr-2"><Icon size={24} name="social-whatsapp" /></a
          >
          <a
            href="https://www.linkedin.com/company/mat%C3%ADas-szpira-bienes-ra%C3%ADces/about/"
            target="_blank"
            class="mr-2 text-bg-2-msb"
            ><Icon size={24} name="brand-linkedin" /></a
          >
        </div>
        <div
          class="mb-4 flex align-center justify-center md:justify-center lg:justify-start gap-2"
        >
          <Icon size={24} class="self-center" name="mail-green" />
          <a
            href="mailto:info@matiasszpira.com.ar"
            class="self-center text-sm text-center font-semibold"
            >info@matiasszpira.com.ar</a
          >
        </div>
      </div>
      <div class="lg:col-start-3 lg:col-end-4 mb-6 sm:mb-0">
        <h3
          class="text-sm text-center md:text-center lg:text-start font-semibold mb-4 text-[#4E5A2B]"
        >
          QUÉ QUIERO
        </h3>
        <ul class="w-100 text-center md:text-center lg:text-start">
          <li class="mb-1">
            <button value="V" id="btnOp" class="text-sm">Venta</button>
          </li>
          <li class="mb-1">
            <button value={"A"} id="btnOp" class="text-sm">Alquiler</button>
          </li>
          <li class="mb-1">
            <button value={"T"} id="btnOp" class="text-sm"
              >Alquiler Temporario</button
            >
          </li>
        </ul>
      </div>
      <div class="lg:col-start-5 lg:col-end-6 mb-6 sm:mb-0">
        <h3
          class="text-sm text-center md:text-center lg:text-start font-semibold mb-4 text-[#4E5A2B]"
        >
          EMPRENDIMIENTOS
        </h3>
        <ul class="w-100 text-center md:text-center lg:text-start">
          <li class="mb-1">
            <a
              href={"/emprendimientos?&ed_est=En+Pozo"}
              data-astro-prefetch
              class="text-sm">En Pozo</a
            >
          </li>
          <li class="mb-1">
            <a
              href="/emprendimientos?&ed_est=En+Construccion"
              data-astro-prefetch
              class="text-sm">En Construcción</a
            >
          </li>
          <li class="mb-1">
            <a
              href="/emprendimientos?&ed_est=Terminado"
              data-astro-prefetch
              class="text-sm">Terminado</a
            >
          </li>
        </ul>
      </div>
      <div class="lg:col-start-6 lg:col-end-7 mb-6 sm:mb-0">
        <h3
          class="text-sm text-center md:text-center lg:text-start font-semibold mb-4 text-nowrap text-[#4E5A2B]"
        >
          NUESTROS SERVICIOS
        </h3>
        <ul class="w-100 text-center md:text-center lg:text-start grid">
          <li class="mb-1">
            <a href="/servicios/tasaciones" class="text-sm">Tasaciones</a>
          </li>
          <li class="mb-1">
            <a href="/servicios/administracion" class="text-sm"
              >Administración</a
            >
          </li>
        </ul>
      </div>
      <div class="lg:col-start-7 lg:col-end-8 mb-6 sm:mb-0">
        <a href="/contacto/#branchs">
          <h3
            class="text-sm text-center md:text-center lg:text-start font-semibold mb-4 text-nowrap text-[#4E5A2B]"
          >
            SUCURSALES
          </h3>
        </a>
        <ul class="w-100 text-center md:text-center lg:text-start">
          <li class="mb-1">
            <a
              href="/nosotros"
              class="text-sm font-semibold mb-2 text-[#4E5A2B]">NOSOTROS</a
            >
          </li>
          <li class="mb-1">
            <a
              href="/contacto"
              data-astro-prefetch
              class="text-sm font-semibold mb-2 text-[#4E5A2B]">CONTACTO</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="bg-primary-bg-hover-msb py-10  pb-28">
    <div
      class="grid w-fit grid-cols md:flex md:items-end text-pretty md:justify-start md:gap-12 gap-6 justify-center items-center container mx-auto"
    >
      <div>
        <div>
          <Image
            width={100}
            height={100}
            class="aspect-auto object-cover mx-auto"
            src={cucCia}
            alt = "Miembro de la Cámara Inmobiliaria Argentina"
          />
        </div>
        <p class="text-white text-center pt-5 w-fit">
          Miembro de la Cámara Inmobiliaria Argentina
        </p>
      </div>
      <div>
        <div>
          <Image
            width={100}
            height={100}
            class="aspect-auto object-cover mx-auto"
            src={cucCpi}
            alt = "Miembro de CUCICBA MAT. 7471"
          />
        </div>
        <p class="text-white text-center pt-5">Miembro de CUCICBA MAT. 7471</p>
      </div>
      <div>
        <div>
          <Image
            width={60}
            height={60}
            class="aspect-auto object-cover mx-auto"
            src={cucPrin}
            alt = "Miembro del Grupo PRIN"
          />
        </div>
        <p class="text-white text-center pt-5">Miembro del Grupo PRIN</p>
      </div>

      <div>
        <div>
           <Image
            width={50}
            height={50}
            class="aspect-auto object-cover mx-auto"
            src={cucMoron}
            alt = "Depto. Judicial de Morón"
          />
        </div>
        <p class="text-white text-center pt-5">Depto. Judicial de Morón</p>
      </div>
    </div>
  </div>

  <script>
    // Script para obtener los btnOps y hacer una navegacion con el valor de cada boton a /resultados-de-busqueda?tipo_operacion=valorDelBoton
    document.addEventListener("astro:page-load", (event) => {
      const btnOps = document.querySelectorAll("#btnOp");
      btnOps.forEach((btnOp) => {
        btnOp.addEventListener("click", (e) => {
          e.preventDefault();
          e.stopImmediatePropagation();
          // Dejar la viewtransition
          btnOp.scrollIntoView({ behavior: "smooth" });
          window.location.href = `/resultados-de-busqueda?tipo_operacion=${
            (e.target as HTMLButtonElement).value
          }`;
        });
      });
    });
  </script>
</footer>
